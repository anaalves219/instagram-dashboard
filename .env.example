# Instagram Sales Dashboard - Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Instagram/Meta API (Optional)
INSTAGRAM_TOKEN=your-instagram-access-token
INSTAGRAM_APP_ID=your-facebook-app-id  
INSTAGRAM_BUSINESS_ID=your-instagram-business-account-id
INSTAGRAM_WEBHOOK=https://your-domain.com/webhooks/instagram
INSTAGRAM_WEBHOOK_SECRET=your-webhook-verify-token

# WhatsApp Business API (Optional)
WHATSAPP_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_ID=your-whatsapp-phone-number-id
WHATSAPP_WEBHOOK_TOKEN=your-whatsapp-webhook-verify-token
WHATSAPP_WEBHOOK=https://your-domain.com/webhooks/whatsapp
WHATSAPP_WEBHOOK_SECRET=your-whatsapp-webhook-secret

# N8N Automation (Optional)
N8N_WEBHOOK=https://your-n8n-instance.com/webhook/sales-dashboard
N8N_AUTH_TOKEN=your-n8n-auth-token

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Additional APIs (Optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your/discord/webhook

# System Configuration
DEBUG_MODE=false
RATE_LIMIT_REQUESTS=100
BACKUP_ENABLED=true
LOG_LEVEL=info